<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/stroom-agent/lib</outputDirectory>
      <includes>
        <include>stroom</include>
        <include>org.springframework</include>
        <include>com.jcraft</include>
        <include>commons*</include>
        <include>org.apache*</include>
        <include>org.slf4j</include>
        <include>log4j</include>
        <include>joda-time</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/stroom-agent/lib-extra</outputDirectory>
      <excludes>
        <exclude>stroom</exclude>
        <exclude>org.springframework</exclude>
        <exclude>com.jcraft</exclude>
        <exclude>commons*</exclude>
        <exclude>org.apache*</exclude>
        <exclude>org.slf4j</exclude>
        <exclude>log4j</exclude>
        <exclude>joda-time</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/stroom-agent</outputDirectory>
      <includes>
        <include>bin/*</include>
      </includes>
      <excludes>
        <exclude>bin/dev*.sh</exclude>
      </excludes>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}</directory>
      <outputDirectory>/stroom-agent-example</outputDirectory>
      <includes>
        <include>examples/**</include>
        <include>logs</include>
        <include>repos</include>
        <include>state</include>
        <include>conf/*</include>
      </includes>
      <excludes>
        <exclude>bin/dev*.sh</exclude>
      </excludes>
      <useDefaultExcludes>true</useDefaultExcludes>
    </fileSet>
  </fileSets>
</assembly>
